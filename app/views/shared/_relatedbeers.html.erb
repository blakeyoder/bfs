<% if @related_beers.count > 0 %>
  <div class="col-md-6 col-md-offset-3 related-beers-header">
    <h2>Related Beers</h2>
    <hr id="header-divider" />
  </div>
  <div class="related-beers">
    <div class="container-fluid">
      <div class="row">
        <div class="col-lg-12">
          <% @related_beers.each do |beer| %>
          <div class="col-md-4 col-sm-4 col-xs-4">
            <%= link_to image_tag(show_bottle_img(beer), :class => "img-responsive index-bottle-image"), beer_path(beer) %>
              <h1 id="related-beer__name"><%= beer.name %></h1>
              <p id="related-beer__style"><%= beer.style %></p>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>
